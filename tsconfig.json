{
  "compilerOptions": {
    "strict": true,

    "noImplicitReturns": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "module": "es2022",
    "moduleResolution": "node",

    "target": "es5",
    "jsx": "react",

    "allowJs": true,
    "checkJs": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "skipLibCheck": true,

    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "lib": ["ES2015", "dom"]
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]
}
